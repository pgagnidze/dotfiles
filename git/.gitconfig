# =============================================================================
# USER CONFIGURATION
# =============================================================================
[user]
	name = Papuna Gagnidze
	email = pgagnidze@pm.me
	signingkey = 5FD281D8218E26FB

# =============================================================================
# CORE SETTINGS
# =============================================================================
[core]
	pager = diff-so-fancy | less --tabs=4 -RF
	editor = nvim
	compression = 9
	whitespace = trailing-space
	preloadIndex = true

[init]
	defaultBranch = main

# =============================================================================
# ALIASES
# =============================================================================
[alias]
	graph = log --all --graph --decorate --oneline
	stat = status --short

# =============================================================================
# COMMIT & SIGNING
# =============================================================================
[commit]
	verbose = true
	gpgsign = true

[gpg]
	program = /usr/bin/gpg

# =============================================================================
# BRANCH & TAG MANAGEMENT
# =============================================================================
[branch]
	sort = -committerdate

[tag]
	sort = -version:refname

# =============================================================================
# DIFF & MERGE SETTINGS
# =============================================================================
[diff]
	algorithm = histogram
	mnemonicPrefix = true

[interactive]
	diffFilter = diff-so-fancy --patch
	singlekey = true

# =============================================================================
# REMOTE OPERATIONS
# =============================================================================
[push]
	autoSetupRemote = true

[pull]
	rebase = true

[fetch]
	prune = true

# =============================================================================
# REBASE & CONFLICT RESOLUTION
# =============================================================================
[rebase]
	missingCommitsCheck = warn
	autoSquash = true

[rerere]
	enabled = true
	autoUpdate = true

# =============================================================================
# UI & DISPLAY
# =============================================================================
[column]
	ui = auto

[status]
	branch = true
	showStash = true

[help]
	autocorrect = prompt

# =============================================================================
# MAINTENANCE
# =============================================================================
[maintenance]
	auto = true
	strategy = incremental
